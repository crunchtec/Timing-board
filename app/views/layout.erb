<script>
  $(function() {
    $('#control-interface').change(function() {
      if ($('#main-switch').prop('checked') == true) {
        $('#main-switch-status').val('checked');
      } else {
        $('#main-switch-status').val('unchecked');
      }
      $(this).submit();
    });
    $('#command-history').change(function() {
      $('#any-command').val($(this).val());
      $('#any-command').focus();
    });
  });
