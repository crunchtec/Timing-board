
    <div class = "container">
      <div class = "row">
        <h1>QC Control Interface by Crunch Technologies</h1>
        <form id = "control-interface">
          <div class = "row col-md-12 main-switch-bar text-center">
            <label>Signal generator output: </label>
            <input id = "main-switch" type = "checkbox" data-toggle = "toggle" <%= main_switch %> data-width = "300px" name = "main_switch">
            <input id = "main-switch-status" type = "hidden" value = "<%= main_switch_status %>" name = "main_switch_status">
          </div>
          <div class = "col-md-3">
            <table class = "text-center">
              <tbody>
                <tr>
                  <td>
                    <input id = "channel_a_name_custom" type="text" class="btn btn-lg" value = "<%= channel_a_name_custom %>" name = "channel_a_name_custom">
                  </td>
                </tr>
                <tr>
                  <td>
                    <button id = "channel_a_delay_up" type="button" class="btn btn-default btn-lg">
                      <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
                    </button>
                  </td>
                </tr>
                <tr>
                  <td>
                    <input id = "channel_a_delay_value" type="text" class="btn btn-lg" value = <%= channel_a_delay %> name = "channel_a_delay">
                  </td>
                </tr>
                <tr>
                  <td>
                    <button id = "channel_a_delay_down" type="button" class="btn btn-default btn-lg">
                      <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                    </button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class = "col-md-3">Channel B</div>
          <div class = "col-md-3">Channel C</div>
          <div class = "col-md-3">Channel D</div>
        </form>
      <div class = "row col-md-12">
        <div class = "col-md-6">
          <form class = "form-inline" action = "/send" method = "POST">
            <div class = "form-group">
              <input class = "form-control" type='text' name='command' id = "any-command"/>
            </div>
            <button class = "btn btn-default" type = "submit">Send command</button>
          </form>
        </div>
        <div class = "col-md-6">
          <form class = "form-inline" action = "/deletehistory" method = "POST">
            <button class = "btn btn-danger" type = "submit">Delete command history</button>
          </form>
        </div>
        <div class = "form-group">
          <label>Command history:</label>
          <select class = "form-control" size = "5" id = "command-history">
            <% command_history.each do |command|%>
            <option><%= command %></option>
            <% end %>
          </select>
        </div>
      </div>
      </div>
      <div class = "row">
        <div class = "col-md-6 text-left">
          <p> Response time: <%= response_time %></p>
        </div>
        <div class = "col-md-6 text-right">
          <p> Last response from serial port: <%= serial_response %></p>
        </div>
      </div>
    </div>
